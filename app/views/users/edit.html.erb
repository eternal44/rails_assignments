<h1>Edit User</h1>


<form action="/users/<%= @user.id %>" class="edit_user" id="edit_user_<%= @user.id %>" method="put">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <label for="user_first_name">First Name</label>
  <input type="text" id="user_first_name" name="user[first_name]" value="<%= @user.first_name %>" /><br />
  <label for="user_last_name">Last Name</label>
  <input type="text" id="user_last_name" name="user[last_name]" value="<%= @user.last_name %>" /><br />
  <label for="user_email_address">Email Address</label>
  <input type="text" id="user_email_address" name="user[email_address]" value="<%= @user.email_address %>" /><br />
  <label for="password">Password</label>
  <input type="text" id="user_password" name="user[password]" value="<%= @user.password %>" /><br />

  <input name="commit" type="submit" value="Edit User" /><br />
</form>


<a href="/users">Back</a>